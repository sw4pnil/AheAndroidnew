<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/form_bg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="@dimen/dp20"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/guestUserHeaderText"
                    style="@style/form_head_text_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="@dimen/dp20"
                    android:layout_marginEnd="16dp"
                    android:gravity="center"
                    android:text="@string/world_s_no_1_crowdfunding_platform_for_fundraising_campaign" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/searchCampaignsText"
                    style="@style/form_head_text_small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/guestUserHeaderText"
                    android:layout_marginStart="@dimen/dp10"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="@dimen/dp10"
                    android:layout_marginBottom="@dimen/dp10"
                    android:gravity="center"
                    android:text="@string/search_campaigns_by_urn_by_country_or_by_entering_name" />

                <LinearLayout
                    android:id="@+id/filterLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/searchCampaignsText"
                    android:layout_marginTop="@dimen/dp10"
                    android:weightSum="4"
                    android:orientation="horizontal">



                    <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                        android:id="@+id/selectCountryEditText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp8"
                        android:layout_weight="1"
                        android:background="@android:drawable/editbox_background"
                        android:hint="@string/select_country"
                        android:textSize="10sp" />

                    <!-- <androidx.appcompat.widget.AppCompatEditText
                         android:id="@+id/countryEditText"
                         android:layout_width="0dp"
                         android:layout_height="wrap_content"
                         android:layout_weight="1.4"
                         android:background="@android:drawable/editbox_background"
                         android:hint="@string/select_country"
                         android:inputType="textPersonName"
                         android:textSize="@dimen/sp12" />-->

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/searchCampaignEdit"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/dp8"
                        android:layout_weight="3"
                        android:background="@android:drawable/editbox_background"
                        android:inputType="textFilter"
                        android:drawableEnd="@drawable/ic_icons8_search"
                        android:hint="@string/search_campaign"
                        android:textSize="10sp" />


                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/featuredCampaignLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/filterLinearLayout"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="@dimen/dp10">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:gravity="center"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerViewFeatureCampaign"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp10"
                            android:paddingRight="@dimen/dp8"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="12dp"
                            android:paddingLeft="@dimen/dp8"/>

                        <ProgressBar
                            android:id="@+id/progressBarDevice"
                            style="?android:attr/progressBarStyle"
                            android:layout_width="@dimen/dp40"
                            android:layout_height="@dimen/dp40"
                            android:layout_gravity="center"
                            android:paddingTop="@dimen/dp8"
                            android:paddingBottom="@dimen/dp8"
                            android:visibility="gone"

                            />

                        <ImageView
                            android:id="@+id/featureCampaignBackArrow"
                            android:layout_width="14dp"
                            android:layout_height="20dp"
                            android:layout_marginStart="8dp"
                            android:layout_gravity="start|center_vertical"
                            android:contentDescription="@string/left_arrow"
                            android:visibility="visible" />

                        <ImageView
                            android:id="@+id/featureCampaignFrontArrow"
                            android:layout_width="14dp"
                            android:layout_height="20dp"
                            android:layout_gravity="end|center_vertical"
                            android:layout_marginEnd="8dp"
                            android:contentDescription="@string/right_arrow"
                            android:visibility="visible" />

                    </FrameLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/npoLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/featuredCampaignLayout"
                    android:layout_marginTop="16dp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/npoCampaign"
                        style="@style/campaign_title_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:gravity="center"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:text="@string/npo" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@id/npoCampaign"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/dp10"
                        android:text="@string/view_all"
                        android:id="@+id/view2"
                        android:gravity="center"
                        android:textColor="@color/blue"
                        android:layout_marginTop="14dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:textSize="@dimen/sp13" />



                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/view2"
                        >

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerViewNpoCampaign"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="@dimen/dp30"
                            android:paddingEnd="@dimen/dp30"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="12dp"
                            android:paddingLeft="@dimen/dp8"/>

                        <ProgressBar
                            android:id="@+id/progressBarDeviceNpo"
                            style="?android:attr/progressBarStyle"
                            android:layout_width="@dimen/dp40"
                            android:layout_height="@dimen/dp40"
                            android:layout_gravity="center"
                            android:paddingTop="@dimen/dp8"
                            android:paddingBottom="@dimen/dp8"
                            android:visibility="gone"

                            />

                        <ImageView
                            android:id="@+id/featureCampaignBackArrowNpo"
                            android:layout_width="14dp"
                            android:layout_height="20dp"
                            android:layout_marginStart="8dp"
                            android:layout_gravity="start|center_vertical"
                            android:contentDescription="@string/left_arrow"
                            android:src="@drawable/ic_chevron_left_black_24dp"
                            android:layout_marginTop="8dp"
                            android:visibility="visible" />

                        <ImageView
                            android:id="@+id/featureCampaignFrontArrowNpo"
                            android:layout_width="14dp"
                            android:layout_height="20dp"
                            android:layout_gravity="end|center_vertical"
                            android:layout_marginEnd="8dp"
                            android:contentDescription="@string/right_arrow"
                            android:src="@drawable/ic_chevron_right_black_24dp"
                            android:layout_marginTop="8dp"
                            android:visibility="visible" />


                    </FrameLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/publicCommunityCampaignsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/npoLayout"
                    android:layout_marginBottom="@dimen/dp12"
                    android:layout_marginTop="16dp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/view3"
                        style="@style/campaign_title_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:gravity="center"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:text="@string/public_community_campaign" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@id/view3"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/dp10"
                        android:text="@string/view_all"
                        android:layout_marginTop="14dp"
                        android:gravity="center"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/sp13" />


                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/view3"
                        android:layout_below="@+id/view3">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerViewPublicCommunityCampaign"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="@dimen/dp30"
                            android:paddingEnd="@dimen/dp30"                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="12dp" />

                        <ProgressBar
                            android:id="@+id/progressBarDevicePC"
                            style="?android:attr/progressBarStyle"
                            android:layout_width="@dimen/dp40"
                            android:layout_height="@dimen/dp40"
                            android:layout_gravity="center"
                            android:paddingTop="@dimen/dp8"
                            android:paddingBottom="@dimen/dp8"
                            android:visibility="gone"

                            />

                        <ImageView
                            android:id="@+id/featureCampaignBackArrowPC"
                            android:layout_width="14dp"
                            android:layout_height="20dp"
                            android:layout_marginStart="8dp"
                            android:layout_gravity="start|center_vertical"
                            android:contentDescription="@string/left_arrow"
                            android:src="@drawable/ic_chevron_left_black_24dp"
                            android:layout_marginTop="8dp"
                            android:visibility="visible" />

                        <ImageView
                            android:id="@+id/featureCampaignFrontArrowPC"
                            android:layout_width="14dp"
                            android:layout_height="20dp"
                            android:layout_gravity="end|center_vertical"
                            android:layout_marginEnd="8dp"
                            android:contentDescription="@string/right_arrow"
                            android:src="@drawable/ic_chevron_right_black_24dp"
                            android:layout_marginTop="8dp"
                            android:visibility="visible" />


                    </FrameLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </ScrollView>
</RelativeLayout>