<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="form_input_fields">
        <item name="android:textColor">@color/form_fields</item>
        <item name="android:textColorHint">@color/form_fields</item>
        <item name="android:textSize">@dimen/sp14</item>
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>

    <style name="form_head_text">
        <item name="android:textColor">@color/form_head_text</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textSize">@dimen/sp14</item>
    </style>

    <style name="form_head_text_small_heading">
        <item name="android:textColor">@color/form_head_text</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textSize">@dimen/sp12</item>
    </style>


    <style name="form_head_text_white">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textSize">@dimen/sp13</item>
    </style>

    <style name="form_head_text_small">
        <item name="android:textColor">@color/form_head_text</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textSize">11dp</item>
    </style>

    <style name="Theme.UserDialog" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="form_head_text_too_small">
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textColor">@color/form_fields</item>
        <item name="android:textSize">@dimen/sp12</item>
    </style>

    <style name="small_text">
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textSize">@dimen/sp10</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="small_text_black">
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textSize">11dp</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="form_head_text_too_small_black">
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:textSize">@dimen/sp12</item>
    </style>

    <style name="form_head_text_title">
        <item name="android:textColor">@color/form_head_text</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textSize">@dimen/sp16</item>

    </style>

    <style name="title_sp18">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textSize">@dimen/sp18</item>
    </style>

    <style name="header_text">
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textSize">@dimen/sp14</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="button_blue_style">
        <item name="android:background">@drawable/blue_background</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textSize">@dimen/sp12</item>
    </style>

    <style name="button_green_style">
        <item name="android:background">@drawable/green_background</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textSize">@dimen/sp12</item>
    </style>

    <style name="links_style">
        <item name="android:textSize">@dimen/sp14</item>
        <item name="android:textStyle">normal</item>
        <!--<item name="android:fontFamily">@font/lato_regular</item>-->
        <item name="android:textColor">@color/blue_light</item>
    </style>

    <style name="bottom_text_header_style">
        <!--<item name="android:fontFamily">@font/lato_regular</item>-->
        <item name="android:textSize">@dimen/sp14</item>
        <item name="android:textColor">@color/black_text</item>
        <!-- <item name="android:textStyle">bold</item>-->
    </style>

    <style name="campaign_title_style">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:layout_marginStart">@dimen/dp10</item>
        <item name="android:layout_marginTop">@dimen/dp10</item>
        <item name="android:textSize">@dimen/sp16</item>
    </style>
    <style name="donate_now_header">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/sp20</item>
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>

    <style name="donate_now_campaigns">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/sp16</item>
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>

    <style name="fragment_container_style">
        <item name="android:background">@drawable/normal_background</item>
        <item name="android:layout_marginTop">@dimen/dp60</item>
        <item name="android:layout_marginStart">@dimen/dp15</item>
        <item name="android:layout_marginEnd">@dimen/dp15</item>
        <item name="android:layout_marginBottom">@dimen/dp15</item>
    </style>

    <style name="fragment_container_style.top_left">
        <item name="android:background">@drawable/normal_top_background</item>
        <item name="android:layout_marginTop">@dimen/dp60</item>
        <item name="android:layout_marginStart">@dimen/dp15</item>
        <item name="android:layout_marginEnd">@dimen/dp15</item>
        <item name="android:layout_marginBottom">@dimen/dp15</item>
    </style>

    <dimen name="sp16">16sp</dimen>
    <dimen name="dp16">16dp</dimen>
    <dimen name="sp9">9sp</dimen>

</resources>
